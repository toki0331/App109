<div class="d-flex align-items-center">
  <h1>掲示板一覧</h1>
  <div class="ml-auto boards__linkBox">
    <a class="btn btn-outline-dark" href="/boards/new">新規作成</a>
  </div>
</div>
<table class="table table-hover boards__table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>内容</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th>編集ボタン</th>
      <th>削除ボタン</th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
    <tr>
      <%=  idhen = board.id %>
      <th><%= board.id %></th>
      <td><%= board.title %></td>
      <td><%= board.name %></td>
      <td><%= board.body %></td>
      <td><%= board.created_at %></td>
      <td><%= board.updated_at %></td>
      <td><%= link_to("編集","/boards/#{board.id}/edit") %></td>
      <!-- <td><%= board.updated_at %></td> --><td>消し消し</td>
    </tr>
    <% end %>
  </tbody>
</table>
